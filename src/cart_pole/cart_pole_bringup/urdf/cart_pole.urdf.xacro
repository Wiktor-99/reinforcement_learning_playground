<?xml version="1.0" ?>
<robot name="cart_pole" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find cart_pole_bringup)/urdf/macros.urdf.xacro" />

  <link name="world" />
  <link name="slide_bar">
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <mesh filename="package://cart_pole_bringup/meshes/slide_bar.dae"  />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="10 0.05 0.05" />
      </geometry>
    </collision>
    <xacro:box_inertia m="10" w="2" h="0.05" d="0.05"  xyz="0 0 0" rpy="0 0 ${pi/2.0}" />
  </link>

  <link name="cart">
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <mesh filename="package://cart_pole_bringup/meshes/cart.dae" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="0.5 0.5 0.2" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.006"/>
      <!-- TODO: @delipl wrong inertia here -->
      <inertia 
          ixx="0.000199325" ixy="2.051e-06"     ixz="-7.69e-06" 
                            iyy="0.002043291"  iyz="-1.714e-06" 
                                              izz="0.002188884" 
      />

    </inertial>
  </link>

  <link name="pole_with_holder">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://cart_pole_bringup/meshes/pole_with_holder.dae"  />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.05" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.04 0.435057 0" rpy="0 0 0"/>
      <mass value="0.455"/>
      <inertia ixx="0.044100482" ixy="-0.000237859" ixz="-0.000004"
                                 iyy="0.000040196"  iyz="-0.000037" 
                                                    izz="0.044096759" />

    </inertial>
  </link>

  <joint name="slide_to_pole_with_holder" type="revolute">
    <axis xyz="1 0 0" />
    <origin xyz="0.10161 0 0" rpy="${pi/2} 0 0" />
    <parent link="cart" />
    <child link="pole_with_holder" />
    <limit effort="10000" lower="-1.4" upper="1.4" velocity="1000" />
  </joint>

  <joint name="world_to_base" type="fixed">
    <origin rpy="0 0 ${pi}" xyz="0 0 1" />
    <parent link="world" />
    <child link="slide_bar" />
  </joint>

  <joint name="slider_to_cart" type="prismatic">
    <axis xyz="0 -1 0" />
    <origin xyz="0.09 ${0.435057 - 0.435057} 0.004" />
    <parent link="slide_bar" />
    <child link="cart" />
    <limit effort="10000" lower="${-0.133 - 0.435057}" upper="${1.21 - 0.435057}" velocity="1000" />
    <dynamics damping="0.05" />
  </joint>

  <gazebo reference="cart">
    <visual>
      <material>
        <ambient>0 0 0.8 1</ambient>
        <diffuse>0 0 0.8 1</diffuse>
        <specular>0 0 0.8 1</specular>
      </material>
    </visual>
  </gazebo>

  <gazebo reference="pole_with_holder">
    <visual>
      <material>
        <ambient>0.8 0 0 1</ambient>
        <diffuse>0.8 0 0 1</diffuse>
        <specular>0.8 0 0 1</specular>
      </material>
    </visual>
  </gazebo>

  <gazebo>
    <plugin filename="gz-sim-joint-controller-system" name="gz::sim::systems::JointController">
      <joint_name>slider_to_cart</joint_name>
      <use_force_commands>true</use_force_commands>
      <topic>effort_cmd</topic>
    </plugin>
    <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
      <topic>joint_states</topic>
      <joint_name>slider_to_cart</joint_name>
      <joint_name>slide_to_pole_with_holder</joint_name>
    </plugin>
  </gazebo>
</robot>
