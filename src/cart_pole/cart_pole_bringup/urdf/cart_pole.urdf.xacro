<?xml version="1.0" ?>
<robot name="cartopole" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find cart_pole_bringup)/urdf/macros.urdf.xacro" />

  <link name="world" />
  <link name="slide_bar">
    <visual>
      <origin xyz="0 0 1" />
      <geometry>
        <box size="10 0.05 0.05" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="10 0.05 0.05" />
      </geometry>
    </collision>
    <xacro:box_inertia m="5" w="10" h="0.05" d="0.05" />
  </link>

  <link name="cart">
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="0.5 0.5 0.2" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="0.5 0.5 0.2" />
      </geometry>
    </collision>
    <xacro:box_inertia m="1" w="0.5" h="0.2" d="0.5" />
  </link>

  <link name="pole_holder">
    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.05" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.05" />
      </geometry>
    </collision>
    <xacro:cylinder_inertia m="1" r="0.05" h="0.05" />
  </link>

  <joint name="pole_holder_base_to_pole_holder" type="revolute">
    <axis xyz="0 1 0" />
    <origin xyz="0 0.28 0.05" rpy="0 0.001 0" />
    <parent link="cart" />
    <child link="pole_holder" />
    <limit effort="1000" lower="-1.57" upper="1.57" velocity="100" />
  </joint>

  <link name="pole">
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.75" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.75" />
      </geometry>
    </collision>
    <xacro:cylinder_inertia m="2" r="0.05" h="0.75" />
  </link>

  <joint name="pole_holder_to_pole" type="fixed">
    <origin xyz="0 0.075 0.35" />
    <parent link="pole_holder" />
    <child link="pole" />
  </joint>

  <joint name="world_to_base" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 1" />
    <parent link="world" />
    <child link="slide_bar" />
  </joint>

  <joint name="slider_to_cart" type="prismatic">
    <axis xyz="1 0 0" />
    <origin xyz="0 0 1.15" />
    <parent link="slide_bar" />
    <child link="cart" />
    <limit effort="10" lower="-5" upper="5" velocity="30" />
    <dynamics damping="0.1" friction="0.1" />
  </joint>

  <gazebo reference="cart">
    <visual>
      <material>
        <ambient>0 0 0.8 1</ambient>
        <diffuse>0 0 0.8 1</diffuse>
        <specular>0 0 0.8 1</specular>
      </material>
    </visual>
  </gazebo>

  <ros2_control name="GazeboSimSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>
    <joint name="slider_to_cart">
      <command_interface name="effort">
        <param name="min">-1000</param>
        <param name="max">1000</param>
      </command_interface>
      <state_interface name="velocity" />
      <state_interface name="effort" />
      <state_interface name="position" />
    </joint>
    <joint name="pole_holder_base_to_pole_holder">
      <state_interface name="velocity" />
      <state_interface name="position">
          <param name="initial_value">0.001</param>
        </state_interface>

    </joint>
  </ros2_control>

  <gazebo>
    <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>$(find cart_pole_bringup)/config/cart_pole_controllers.yaml</parameters>
    </plugin>
    <self_collide>true</self_collide>
  </gazebo>
</robot>