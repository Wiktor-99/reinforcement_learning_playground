<?xml version="1.0" ?>
<robot name="cartopole" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="cylinder_inertia" params="m r h">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (3*r*r + h*h)}" ixy = "0" ixz = "0" iyy="${(m/12) * (3*r*r + h*h)}" iyz = "0" izz="${(m/2) * (r*r)}"/>
    </inertial>
  </xacro:macro>

  <link name="world"/>
  <link name="slideBar">
    <visual>
      <geometry>
        <box size="10 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 1"/>
    </visual>
    <inertial>
      <mass value="100"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>
  <link name="cart">
    <visual>
      <geometry>
        <box size="0.5 0.5 0.2"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.5 0.2"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <link name="pole_holder">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.2"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.2"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <joint name="cart_to_pole_holder" type="fixed">
    <origin xyz="0 0 0.2"/>
    <parent link="cart"/>
    <child link="pole_holder"/>
  </joint>

  <link name="pole_holder2">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
    </collision>
    <inertial>
      <mass value="1.5"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <joint name="pole_holder_to_pole_holder2" type="revolute">
    <axis xyz="0 1 0"/>
    <origin xyz="0 0.075 0.05" rpy="0 0 0" />
    <parent link="pole_holder"/>
    <child link="pole_holder2"/>
    <limit effort="10" lower="-1.57" upper="1.57" velocity="15"/>
  </joint>

  <link name="pole">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <xacro:cylinder_inertia m="5" r="0.05" h="0.5" />
  </link>

  <joint name="pole_holder_to_pole" type="fixed">
    <origin xyz="0 0.075 0.15"/>
    <parent link="pole_holder2"/>
    <child link="pole"/>
  </joint>

  <link name="leg1">
    <visual>
      <geometry>
        <cylinder radius="0.2" length="2.0"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.2" length="2.0"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="2"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <link name="leg2">
    <visual>
      <geometry>
        <cylinder radius="0.2" length="2.0"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.2" length="2.0"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="2"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>
  <joint name="world_to_base" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 1"/>
    <parent link="world"/>
    <child link="slideBar"/>
  </joint>
  <joint name="slider_to_cart" type="prismatic">
    <axis xyz="1 0 0"/>
    <origin xyz="0 0 1.0"/>
    <parent link="slideBar"/>
    <child link="cart"/>
    <limit effort="10.0" lower="-5" upper="5" velocity="30"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <joint name="slider_to_leg1" type="fixed">
    <origin xyz="-5 0 1"/>
    <parent link="slideBar"/>
    <child link="leg1"/>
  </joint>

  <joint name="slider_to_leg2" type="fixed">
    <origin xyz="5 0 1"/>
    <parent link="slideBar"/>
    <child link="leg2"/>
  </joint>

  <gazebo reference="slideBar">
    <visual>
      <material>
        <ambient>0 0.8 0 1</ambient>
        <diffuse>0 0.8 0 1</diffuse>
        <specular>0 0.8 0 1</specular>
      </material>
    </visual>
  </gazebo>

  <gazebo reference="cart">
    <visual>
      <material>
        <ambient>0 0 0.8 1</ambient>
        <diffuse>0 0 0.8 1</diffuse>
        <specular>0 0 0.8 1</specular>
      </material>
    </visual>
  </gazebo>

  <ros2_control name="GazeboSimSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>
    <joint name="slider_to_cart">
      <command_interface name="velocity">
        <param name="min">-15</param>
        <param name="max">15</param>
      </command_interface>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
      <state_interface name="position"/>
    </joint>
    <joint name="pole_holder_to_pole">
      <state_interface name="velocity"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>$(find cart_pole_bringup)/config/cart_pole_controllers.yaml</parameters>
    </plugin>
    <self_collide>true</self_collide>
  </gazebo>
</robot>