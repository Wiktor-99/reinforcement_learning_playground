<?xml version="1.0" ?>
<robot name="cart_pole" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find cart_pole_bringup)/urdf/macros.urdf.xacro" />

  <link name="world" />
  <link name="slide_bar">
    <visual>
      <origin xyz="0 0 1" />
      <geometry>
        <box size="10 0.05 0.05" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="10 0.05 0.05" />
      </geometry>
    </collision>
    <xacro:box_inertia m="1" w="10" h="0.05" d="0.05" />
  </link>

  <link name="cart">
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="0.5 0.5 0.2" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="0.5 0.5 0.2" />
      </geometry>
    </collision>
    <xacro:box_inertia m="0.4" w="0.5" h="0.2" d="0.5" />
  </link>

  <link name="pole_holder">
    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.05" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.05" />
      </geometry>
    </collision>
    <xacro:cylinder_inertia m="0.001" r="0.05" h="0.05" />
  </link>

  <joint name="pole_holder_base_to_pole_holder" type="revolute">
    <axis xyz="0 1 0" />
    <origin xyz="0 0.28 0.05" rpy="0 0.001 0" />
    <parent link="cart" />
    <child link="pole_holder" />
    <limit effort="10000" lower="-1.4" upper="1.4" velocity="1000" />
  </joint>

  <link name="pole">
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.75" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.75" />
      </geometry>
    </collision>
    <xacro:cylinder_inertia m="0.002" r="0.05" h="0.75" />
  </link>

  <joint name="pole_holder_to_pole" type="fixed">
    <origin xyz="0 0.075 0.35" />
    <parent link="pole_holder" />
    <child link="pole" />
  </joint>

  <joint name="world_to_base" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 1" />
    <parent link="world" />
    <child link="slide_bar" />
  </joint>

  <joint name="slider_to_cart" type="prismatic">
    <axis xyz="1 0 0" />
    <origin xyz="0 0 1.15" />
    <parent link="slide_bar" />
    <child link="cart" />
    <limit effort="10000" lower="-5" upper="5" velocity="1000" />
    <dynamics damping="0.05" />
  </joint>

  <gazebo reference="cart">
    <visual>
      <material>
        <ambient>0 0 0.8 1</ambient>
        <diffuse>0 0 0.8 1</diffuse>
        <specular>0 0 0.8 1</specular>
      </material>
    </visual>
  </gazebo>
  <gazebo>
    <plugin filename="gz-sim-joint-controller-system" name="gz::sim::systems::JointController">
      <joint_name>slider_to_cart</joint_name>
      <use_force_commands>true</use_force_commands>
      <topic>effort_cmd</topic>
    </plugin>
    <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
      <topic>joint_states</topic>
      <joint_name>slider_to_cart</joint_name>
      <joint_name>pole_holder_base_to_pole_holder</joint_name>
    </plugin>
  </gazebo>
</robot>